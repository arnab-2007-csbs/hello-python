2)...#function of factorial#

def factorial (n) :
      if n == 0 or n == 1:
         return 1
      else:
         return n*factorial(n-1)
num = int(input("Enter a number")) 
   if num < 0:
     print("Negative numbers can't have                                         factorials") 
   else:
     print(f"{num}    factorial:{factorial(num)} ") 

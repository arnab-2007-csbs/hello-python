#fibonacci series program 

number=int(input("enter fibonacci series number"))
a=0
b=1
c=0
print(a) 
print(b) 
i=1
while i< number:
    c=a+b
    a=b
    b=c
    i=i+1
    print(c)
#factorial using loop
i=int(input("Enter the number")) 
fact=1
while i >0 :
      fact=fact*i
      i=i-1
print("Factorial=", fact) 




#factorial using recursion 

def fact(n) :
    if n==1:
       return 1
    else :
        return (n*fact(n-1)) 
n=int(input("Enter the number") )
if n<=0:
    print("error")
else :
    print("factorial =", fact(n) )




#Armstrong number check 

n=int(input("Enter a Number "))
temp=n
sum=0
while n>0:
    r=n%10
    sum = sum+r*r*r
    n=n//10
if temp == sum:
    print("Armstrong number ")
else :
    print("not Armstrong number ")




#sum of digits 

n=int(input("Enter a Number "))
sum=0
while n>0:
    r=n%10
    sum = sum+r
    n=n//10
print("sum of digits ", sum)